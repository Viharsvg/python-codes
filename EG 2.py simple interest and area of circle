principal=int(input("enter the value of principal:="))
roi=int(input("enter the value of roi:="))
t=int(input("enter the value of t:="))
ans=(principal*roi*t)/100
print("simpleinterst of ",principal,"and",roi,"and",t,"is:=",ans)
r=int(input("enter the value of r:="))
pi=3.14
ans=(pi*r*r)
print("area of circle of pi",pi,"and r",r,"is:=",ans)
